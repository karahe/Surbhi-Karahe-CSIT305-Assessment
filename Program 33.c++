/*  Program Objective : Program to demonstrate the unary operators, prefix and postfix modes*/
#include <iostream>
using  namespace std;
   int main() 
   {
    int x=5;
    cout<<" x="<<x<<endl;
   //Post increment
    cout<<"x++ ="<<x++<<endl;
   //Pre increment
    cout<<"++x ="<<++x<<endl;
   //Post decrement
    cout<<"x-- ="<<x--<<endl;
   //Pre decrement
    cout<<"--x ="<<--x<<endl;
     return 0;
     }
